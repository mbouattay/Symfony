                                <a type="submit" href="{{path('Resto_edit', {id:Resto.id})}}" class="btn btn-outline-warning mx-2">
                                <i class="bi bi-pencil-square"></i>
                                </a>
                                <a type="submit" href="{{path('deleteResto', {id:Resto.id})}}" class="btn btn-outline-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                                </td>
                            {% endif %}
                            
                        </tr>
                      {% endfor %}
                    
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
{% endblock %}
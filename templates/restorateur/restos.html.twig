{% extends 'base.html.twig' %}

{% block title_container %}Resto{% endblock %}

{% block page_name %}Resto{% endblock %}

{% block inner_container %}

            <div class="col-12">
              <div class="card recent-sales">
                <div class="card-body">
                  <h5 class="card-title">Resto <span>| GÃ©rer les Resto </span></h5>
                  <table class="table table-sm">
                    <thead>
                      <tr>
                        <th scope="col">ID</th>
                        <th scope="col">NOM</th>
                        <th scope="col">Adresse</th>
                        <th scope="col">Tel</th>
                        <th scope="col">Ville</th>
                      </tr>
